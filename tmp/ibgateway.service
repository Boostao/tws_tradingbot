[Unit]
Description=IB Gateway (IBC)
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/ibc
Environment=HOME=/root
ExecStart=/usr/bin/xvfb-run --auto-servernum --server-args="-screen 0 1024x768x24" /opt/ibc/gatewaystart.sh -inline
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
