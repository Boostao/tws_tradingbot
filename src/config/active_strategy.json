{
  "id": "active-strategy",
  "name": "EMA Crossover with VIX Filter",
  "version": "1.0.0",
  "description": "A simple EMA crossover strategy that only buys when VIX conditions are favorable and during market hours. Uses 9/21 EMA crossover for entry signals.",
  "tickers": ["SPY", "QQQ", "AAPL", "MSFT", "GOOGL"],
  "rules": [
    {
      "id": "rule-vix-slope-filter",
      "name": "VIX Slope Filter",
      "description": "Only allow trades when VIX EMA slope is declining (market calming)",
      "scope": "global",
      "condition": {
        "type": "slope_below",
        "indicator_a": {
          "type": "ema",
          "length": 9,
          "timeframe": "5m",
          "source": "close",
          "symbol": "VIX"
        },
        "indicator_b": null,
        "threshold": -0.25,
        "lookback_periods": 6
      },
      "action": "filter",
      "enabled": true,
      "priority": 100
    },
    {
      "id": "rule-market-hours",
      "name": "Market Hours Filter",
      "description": "Only trade during regular market hours (9:30 AM - 4:00 PM ET)",
      "scope": "global",
      "condition": {
        "type": "within_range",
        "indicator_a": {
          "type": "time",
          "length": null,
          "timeframe": "1m",
          "source": "close",
          "symbol": null
        },
        "indicator_b": null,
        "threshold": null,
        "lookback_periods": 1,
        "range_start": "09:30",
        "range_end": "16:00"
      },
      "action": "filter",
      "enabled": true,
      "priority": 99
    },
    {
      "id": "rule-ema-crossover-buy",
      "name": "EMA 9/21 Crossover Buy",
      "description": "Buy when EMA(9) crosses above EMA(21) - bullish momentum signal",
      "scope": "per_ticker",
      "condition": {
        "type": "crosses_above",
        "indicator_a": {
          "type": "ema",
          "length": 9,
          "timeframe": "5m",
          "source": "close",
          "symbol": null
        },
        "indicator_b": {
          "type": "ema",
          "length": 21,
          "timeframe": "5m",
          "source": "close",
          "symbol": null
        },
        "threshold": null,
        "lookback_periods": 1
      },
      "action": "buy",
      "enabled": true,
      "priority": 50
    },
    {
      "id": "rule-ema-crossover-sell",
      "name": "EMA 9/21 Crossover Sell",
      "description": "Sell when EMA(9) crosses below EMA(21) - bearish momentum signal",
      "scope": "per_ticker",
      "condition": {
